<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Havrilyak.LNU.WorkWise.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkWise.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shapka.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3 ">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between justify-content-sm-end ">
                    <div class="ml-auto navbar">
                        <img class="logo" src="/image/image_layout/WW.png" alt="Logo" asp-area="" asp-page="/Index">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 positioned hover-underline-animation cta" asp-area="" asp-page="/SearchForEmployers">Employers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 positioned" asp-area="" asp-page="/SearchForFreelancers">Freelancers</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 positioned" asp-area="" asp-page="/Privacy">Info and Feedback</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 " asp-area="" asp-page="/Registration">Registration</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark button-17 " asp-area="" asp-page="/SignIn">Sign in</a>
                            </li>

                        </ul>
                   </div>                                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2023 - Havrilyak.LNU.WorkWise.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>