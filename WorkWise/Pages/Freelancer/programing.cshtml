@page
@model WorkWise.Pages.Freelancer.programingModel
@{
}

<html>
<head>
	<title>Freelancer Exchange - Find Top Freelance Programmers</title>
	<link rel="stylesheet" href="~/css/FreePrograming.css" asp-append-version="true" />

</head>
<body>
    <div class="container">
        <h1>Freelancer.Programming</h1>
        <div class="sort">
            <label for="sort">Sort by:</label>
            <select id="sort">
                <option value="rating">Rating</option>
                <option value="completed-orders">Completed Orders</option>
                <option value="reviews">Reviews</option>
            </select>
        </div>
        <div class="filter">
            <div class="category">
                <h3>Max</h3>
                <input type="radio" name="max" id="max-10" value="10">
                <label for="max-10">Less than 10</label>
                <input type="radio" name="max" id="max-50" value="50">
                <label for="max-50">Less than 50</label>
                <input type="radio" name="max" id="max-100" value="100">
                <label for="max-100">Less than 100</label>
            </div>
            <div class="category">
                <h3>Min</h3>
                <input type="radio" name="min" id="min-10" value="10">
                <label for="min-10">More than 10</label>
                <input type="radio" name="min" id="min-50" value="50">
                <label for="min-50">
                    More

                    than 50
                </label>
                <input type="radio" name="min" id="min-100" value="100">
                <label for="min-100">More than 100</label>
            </div>
            <div class="category">
                <h3>Relevant</h3>
                <input type="radio" name="relevant" id="relevant-1-month" value="1 month">
                <label for="relevant-1-month">Within 1 month</label>
                <input type="radio" name="relevant" id="relevant-3-months" value="3 months">
                <label for="relevant-3-months">Within 3 months</label>
                <input type="radio" name="relevant" id="relevant-6-months" value="6 months">
                <label for="relevant-6-months">Within 6 months</label>
            </div>
        </div>
        <div class="card-container">
            <div class="card">
                <img src="https://via.placeholder.com/150" alt="Freelancer 1">
                <h2>John Doe</h2>
                <p>Hired through Upwork</p>
            </div>
            <div class="card">
                <img src="https://via.placeholder.com/150" alt="Freelancer 2">
                <h2>Jane Smith</h2>
                <p>Hired through Freelancer</p>
            </div>
            <div class="card">
                <img src="https://via.placeholder.com/150" alt="Freelancer 3">
                <h2>Bob Johnson</h2>
                <p>Hired through Fiverr</p>
            </div>
        </div>
    </div>

</body>
</html>


